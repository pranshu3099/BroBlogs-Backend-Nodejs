datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id         Int        @id @default(autoincrement())
  name       String
  email      String   
  password   String
  mobile_number String?
  posts        posts[]
  comments     comments[]
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
}

model posts {
  id           Int       @id @default(autoincrement())
  title        String
  content      String    @db.VarChar(10000)  
  parsed_content String  @db.VarChar(65535)
  category_id  Int
  posts_id     Int       @unique
  user_id      Int
  likes_count  Int
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  user         users     @relation(fields: [user_id], references: [id])
  comments     comments[]
}

model categories {
  id           Int       @id @default(autoincrement())
  slug         Int
  category_name String    
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

}


model likes {
  id           Int       @id @default(autoincrement())
  post_id      Int
  user_id      Int
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
 @@unique([post_id, user_id])

}

model comments {
  id           Int       @id @default(autoincrement())
  comment      String    @db.VarChar(10000) 
  posts_id     Int       @unique
  user_id      Int       
  user         users     @relation(fields: [user_id], references: [id])
  posts         posts     @relation(fields: [posts_id], references: [posts_id])
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
}

